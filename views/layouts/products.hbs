{{> navbar}}
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css'>
<link rel="stylesheet" href="assets/css/products.css">
<style>
{{#if products}}
{{#each products}}
    .section-products #product-{{this.code}} .part-1::before {
        background: url({{this.thumbnail}}) no-repeat center;
        background-size: cover;
            transition: all 0.3s;
    }
{{/each}}
{{/if}}
</style>
<div class="container_change spinner-hidden">
    <div class="spinner-border text-ligth" role="status" style="margin-left: 50%;margin-top: 20%;">
      <span class="visually-hidden">Loading...</span>
    </div>
</div>
<section class="section-products">
    <div class="container">
        <div class="input-group search_input">
            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" value="{{category}}"/>
            <button type="button" onclick="filterProducts()" class="btn btn-outline-primary">search</button>
        </div>
        <div class="row justify-content-center text-center">
                <div class="col-md-8 col-lg-6">
                        <div class="header">
                                <h3>Productos Destacados</h3>
                                <h2>Los Productos m√°s Populares</h2>
                        </div>
                </div>
        </div>
        {{#if products}}
            <div class="row">
                {{#each products}}
                    <!-- Single Product -->
                    <div class="col-md-6 col-lg-4 col-xl-3" data-value="{{this.category}}">
                        <div id="product-{{this.code}}" class="single-product">
                            <div class="part-1">
                                <ul>
                                    <li><a class="cart-button" data-value={{this._id}}><i class="fas fa-shopping-cart"></i></a></li>
                                    <li><a><i class="fas fa-share"></i></a></li>
                                    <li><a><i class="fas fa-heart"></i></a></li>
                                </ul>
                            </div>
                            <div class="part-2">
                                <h3 class="product-title">{{this.title}}</h3>
                                <h4 class="product-price">${{this.price}}</h4>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div class="row">
                <div class="col-md-12 no-products">
                    <h3>No hay productos</h3>
                </div>
            </div>
        {{/if}}
    </div>
</section>
<script type="text/javascript" src="/assets/js/mdb.min.js"></script>
<script type="text/javascript" src="/assets/js/products.js"></script>